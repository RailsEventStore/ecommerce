<% content_for(:header) do %>
  <%= @client.name %>
<% end %>

<% content_for(:actions) do %>
  <%= secondary_action_button do %>
    <%= link_to 'Log out', clients_path %>
  <% end %>
<% end %>


<div>
  <% if @client_orders.count > 0 %>
    <table class="w-full">
      <thead>
      <tr>
        <th class="text-left py-2">Number</th>
        <th class="text-left py-2">State</th>
        <th class="text-right py-2">Price</th>
      </tr>
      </thead>

      <tbody>
      <% @client_orders.each do |client_order| %>
        <tr class="border-t">
          <td class="py-2"><%= link_to client_order.number || 'Not submitted', client_order_path(id: @client.id, order_uid: client_order.order_uid), class: "text-blue-500 hover:underline" %></td>
          <td class="py-2 text-left"><%= client_order.state %></td>
          <td class="py-2 text-right"><%= number_to_currency(client_order.order.discounted_value) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No orders to display.</p>
  <% end %>
</div>
