<div class="max-w-2xl mx-auto py-8">
  <h1 class="text-2xl font-bold mb-6">New Pipeline</h1>

  <%= form_with url: pipelines_path, scope: :pipeline, method: :post, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, required: true, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
    </div>
    <div>
      <%= f.submit "Create Pipeline", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
