<div class="max-w-2xl mx-auto py-8">
  <h1 class="text-2xl font-bold mb-6">Edit <%= @company.name %></h1>

  <%= form_with url: company_path(@company.uid), scope: :company, method: :patch, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :linkedin_url, "LinkedIn URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :linkedin_url, value: @company.linkedin_url, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
    </div>
    <div>
      <%= f.submit "Update Company", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
