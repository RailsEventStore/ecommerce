<div class="max-w-2xl mx-auto py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= @contact.name %></h1>
    <%= link_to "Edit", edit_contact_path(@contact.uid), class: "text-blue-600 hover:underline" %>
  </div>

  <dl class="space-y-4">
    <div>
      <dt class="text-sm text-gray-500">Email</dt>
      <dd class="text-lg"><%= @contact.email || "—" %></dd>
    </div>
    <div>
      <dt class="text-sm text-gray-500">Phone</dt>
      <dd class="text-lg"><%= @contact.phone || "—" %></dd>
    </div>
    <div>
      <dt class="text-sm text-gray-500">LinkedIn</dt>
      <dd class="text-lg"><%= @contact.linkedin_url || "—" %></dd>
    </div>
  </dl>

  <div class="mt-8">
    <%= link_to "Back to Contacts", contacts_path, class: "text-gray-600 hover:underline" %>
  </div>
</div>
